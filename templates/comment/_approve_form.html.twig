<form class="btn_approve" method="post" action="{{ path('app_comment_approve', {'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to approve this comment?');">
    <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ comment.id) }}">
    <button class="btn btn_prm">		
      {{ comment.approved ? 'Disapprove' : 'Approve' }}
    </button>
</form>
