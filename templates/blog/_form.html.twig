{{ form_start(form) }}

<div class="blog-setup">
	<div class="container">
		<h3 class="suptitle">Setup</h3>

		<div class="form-group text">
			{{ form_label(form.cover_img) }}
			<div class="form-input_bg">
				{{ form_widget(form.cover_img, { 'attr': { placeholder: 'Cover Image ...' } }) }}
			</div>
		</div>

		<div class="form-group text">
			{{ form_label(form.suptitle) }}
			<div class="form-input_bg">
				{{ form_widget(form.suptitle, { 'attr': { placeholder: 'Name Lastname of Hero ...' } }) }}
			</div>
		</div>
	</div>
</div>


<div class="blog-paragraph">
	<div class="container">
		<h3 class="suptitle">Main paragraph</h3>

		<div class="form-row">

			<div class="form-group text">
				{{ form_label(form.title) }}
				<div class="form-input_bg">
					{{ form_widget(form.title, { 'attr': { placeholder: 'Title ...' } }) }}
				</div>
			</div>

			<div class="form-group text">
				{{ form_label(form.img) }}
				<div class="form-input_bg">
					{{ form_widget(form.img, { 'attr': { placeholder: 'Main image ...' } }) }}
				</div>
			</div>

		</div>


		<div class="form-group textarea">
			{{ form_label(form.text)}}
			<div>
				{{ form_widget(form.text, { 'attr': { placeholder: 'Mainparaph ...' } })}}
			</div>
		</div>
	</div>

</div>


<div class="form-btns">
	<div class="form-btns_item">
		<button class="btn btn_prm">{{ button_label|default('Save') }}</button>
		<a href="{{ path('app_blog_index') }}">
			<button class='btn btn_sec' type="button">cancel</button>
		</a>
	</div>
</div>

{{ form_end(form) }}

