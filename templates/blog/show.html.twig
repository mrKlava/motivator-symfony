{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Suptitle</th>
                <td>{{ blog.suptitle }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
            <tr>
                <th>Cover_img</th>
                <td>{{ blog.coverImg }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ blog.img }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ blog.created ? blog.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_index') }}">back to list</a>

    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
