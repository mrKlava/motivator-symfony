{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}
{% block stylesheets %}
	<link href="{{ asset('style/header-parallax.css') }}" rel="stylesheet"/>
	<link href="{{ asset('style/explore.css') }}" rel="stylesheet"/>
	<link href="{{ asset('style/form.css') }}" rel="stylesheet"/>
{% endblock %}
{% block javascripts %}
	<script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
	<script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
	<script defer src="{{ asset('app/parallax.js') }}"></script>
	<script defer src="{{ asset('app/nav.js') }}"></script>
{% endblock %}

{% block body %}
	<main>
		{% include "template_parts/_header_parallax.html.twig" %}
		{% include "template_parts/_nav.html.twig" %}

		<section class="filter">
			<div class="filter-content">
				<form method="post">
					{# {{ form_start(form) }} #}
					
					<div class="form-group text">
						{# {{ form_widget(form.text)}} #}
						<input name="text" type="text" placeholder="Search for ...">
					</div>
					<div class="form-group select">
						<label for="category">
							Category
						</label>
						<select name="category" id="category">
							<option value="null" default>All</option>
							<option value="1" default>Sport</option>
							<option value="2" default>Mountains</option>
							<option value="3" default>Life</option>
						</select>

					</div>
					<button class="btn">Search</button>

					{# {{ form_end(form) }} #}
				</form>
			</div>
		</section>

		<section class="blogs">
			<div class="blogs-content">

				{% for blog in blogs %}

					<div class="blogs-content_item">
						<div class="blog-item image">
							<img src="{{ asset('img/blogs/card/' ~ blog.img) }}"/>
						</div>
						<div class="blog-item">

							<h1 class="blog-title suptitle">{{ blog.title }}</h1>

							<p class="blog-text text">{{ blog.text }}
								...</p>

							<a class="blog-link" href="{{ path('app_explore_show', {'id': blog.id}) }}">
								<button class='btn btn_thr'>read more</button>

							</a>

							<ul class="blog-list">
