										<defs>
											<clipPath id="clip0_753_224">
												<rect width="16" height="16" fill="white"/>
											</clipPath>
										</defs>
									</svg>

									<span>{{ blog.created ? blog.created|date('d/m/Y') : '' }}</span>
								</li>

								<li class="blog-list_item">
									<svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" height="1em" viewbox="0 0 448 512"><path d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" fill="#EADB7C"/></svg>

									<span>{{ blog.category.getTitle() }}</span>
								</li>


							</ul>
						</div>
					</div>

				{% else %}
				<div class="container">
					<h1 class="title">no records found</h1>
				</div>
				{% endfor %}

				<div class="btn_center">
					<a href="{{ path('app_explore') }}">
						<button class='btn btn_sec'>Load more</button>
					</a>
				</div>
			</div>
		</section>
	</main>
{% endblock %}

